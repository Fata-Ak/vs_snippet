{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"_lg": {
		"prefix": "_lg",
		"body": [
			"@include lg{$1}",
		]
	},
	"_sp": {
		"prefix": "_sp",
		"body": [
			"@include sp{$1}",
		]
	},
	"SETCENTER": {
		"prefix": "_SETCENTER",
		"body": [
			"position: absolute;",
			"inset: 0;",
			"margin: auto;",
		]
	},
	"PSEUDO": {
		"prefix": "_PSEUDO",
		"body": [
			"content: '.';",
			"position: absolute;",
			"display: block;",
			"inset: 0 auto auto 0;",
		]
	},
	"CLAMP": {
		"prefix": "_clamp",
		"body": [
			"overflow: hidden;",
			"text-overflow: ellipsis;",
			"display: -webkit-box;",
			"-webkit-box-orient: vertical;",
			"-webkit-line-clamp: 3;",
		]
	},
	"_flxcenter": {
		"prefix": "_flxcenter",
		"body": [
			"display: flex;",
			"justify-content: center;",
			"align-items: center;",
		]
	},
	"_flxcenter-col": {
		"prefix": "_flxcenter-col",
		"body": [
			"display: flex;",
			"flex-direction: column;",
			"align-items: center;",
		]
	},
	"_imgcover": {
		"prefix": "_imgcover",
		"body": [
			"width: 100%;",
			"height: 100%;",
			"object-fit: cover;",
		]
	},
	"flexAlignitemsCenter": {
		"prefix": "flexAlignitemsCenter",
		"body": [
			"-webkit-box-align: center;",
			"-ms-flex-align: center;",
			"align-items: center;",
		]
	}

}